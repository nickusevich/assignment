# OpenRouter (single API key for LLM + embeddings)
OPENROUTER_API_KEY=ENTER_YOUR_OPENROUTER_API_KEY_HERE # Replace with your actual OpenRouter API key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
LLM_MODEL=google/gemini-2.5-flash

# Embedding provider: "local" (sentence-transformers) or "openrouter"
EMBEDDING_PROVIDER=openrouter
EMBEDDING_DIMENSION=1536
EMBEDDING_MODEL_OPENROUTER=openai/text-embedding-3-small

# EMBEDDING_PROVIDER=local
# EMBEDDING_DIMENSION=768
# EMBEDDING_MODEL_LOCAL=all-mpnet-base-v2

# Retrieval
TOP_K=5
RRF_K=60
RERANKER_RELEVANCE_THRESHOLD=0.5

# Novelty
NOVELTY_CONFIDENCE_THRESHOLD=0.6

# Database URL 
DATABASE_URL=postgresql://football:football@localhost:5432/football_news

